{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block page_title %}
	Caba√±a
{% endblock %}
{% block page_subtitle %}
	Eliminar
{% endblock %}

{% block page_content_before %}
	<div class="marker">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ cabana.id }}</td>
				</tr>
				<tr>
					<th>Nombre</th>
					<td>{{ cabana.nombre }}</td>
				</tr>
				<tr>
					<th>Descripcion</th>
					<td>{{ cabana.descripcion | raw }}</td>
				</tr>
			</tbody>
		</table>
		<div class="owl-carousel owl-theme">
			{% for logo in cabana.logos %}
				<div class="item">
					<img src="{{ asset('uploads/Cabana/Logo/gallery/' ~ logo ) }}" alt="{{cabana.nombre}}" title="{{cabana.nombre}}"/></div>
			{% endfor %}
			{% for g in cabana.gallery %}
				<div class="item">
					<img src="{{ asset('uploads/Cabana/Gallery/gallery/' ~ g ) }}" alt="{{cabana.nombre}}" title="{{cabana.nombre}}"/></div>
			{% endfor %}
			{% for v in cabana.videos|split(';') %}
				<div class="item">
					<iframe width="720" height="400" src="https://www.youtube.com/embed/{{v}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				</div>
			{% endfor %}


		</div>


		<a href="{{ path('cabana_index') }}">back to list</a>

		<a href="{{ path('cabana_edit', {'id': cabana.id}) }}">edit</a>

		{{ include('cabana/_delete_form.html.twig') }}
	</div>
{% endblock %}

{% block customjavascripts %}
	<script></script>
{% endblock %}
